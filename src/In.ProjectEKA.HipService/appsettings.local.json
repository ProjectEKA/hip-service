{
  "Serilog": {
    "Using": [],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Information"
      }
    },
    "Enrich": ["FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId"],
    "WriteTo": [
      { "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console"
        }
      },
      {
        "Name": "Seq",
        "Args": {
          "Formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog",
          "serverUrl": "http://localhost:5341"
        }
      }
    ]
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Username=postgres;Password=password;Database=hipservice;"
  },
  "OtpService": {
    "BaseUrl": "http://localhost:5000",
    "SenderSystemName": "Project-Eka HIP"
  },
  "rabbit": {
    "HostName": "localhost",
    "Port": 5672,
    "UserName": "guest",
    "Password": "guest"
  },
  "dataFlow": {
    "dataSizeLimitInMbs": 5,
    "dataLinkTTLInMinutes": 10
  },
  "hip": {
    "url": "http://localhost:8000"
  },
  "ElasticConfiguration": {
    "Uri": "http://localhost:9200"
  },
  "Gateway": {
    "url": "http://localhost:8000",
    "timeout": 3,
    "clientId": "10000005",
    "clientSecret": "$CLIENT_SECRET"
  },
  "BackgroundJobs": {
    "cancellationCheckInterval": 5
  }
}
